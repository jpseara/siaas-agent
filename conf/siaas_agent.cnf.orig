# Protected configurations (last for the whole run and can't be changed remotely)

log_level = info # options: debug, info, warn, error, critical (Default: info)
api_uri = https://127.0.0.1/api # (Default: None)
api_user = siaas # (Default: None)
api_pwd = siaas # (Default: None)
api_ssl_ignore_verify = true # (Default: None)
api_ssl_ca_bundle = ./ssl/siaas.crt # (Default: None)
#enable_internal_api = true # (Default: false)
#offline_mode = true # don't communicate with the server at all (Default: false)

# Runtime configurations (can be changed during runtime from published configurations in the server)

#datatransfer_loop_interval_sec = 3600 # (Default: 3600)
#disable_neighborhood_discovery = true # don't perform ARP/NDP or automatic discovery (Default: false)
#disable_portscanner = true # don't scan hosts information or vulnerabilities (Default: false)
#disable_wifi_auto_discovery = true # don't auto scan hosts in the IP network on Wi-Fi interfaces (Default: false)
#manual_hosts = 109.51.61.78,sapo.pt,google.com # (Default: None)
#neighborhood_loop_interval_sec = 900 # (Default: 900)
#nmap_portscan_timeout_sec = 600 # (Default: 600)
nmap_scripts = vuln # if commented no nmap scanning script is run. Options: auth,broadcast,brute,default,discovery,dos,exploit,external,fuzzer,intrusive,malware,nmap-vulners,safe,version,vuln,vulscan (Default: None)
#nmap_sysinfo_timeout_sec = 600 # (Default: 600)
#platform_loop_interval_sec = 300 # (Default: 300)
#portscanner_loop_interval_sec = 86400 # (Default: 86400)
#portscanner_max_parallel_workers = 1 # leaving commented means the number of workers is automatically handled (Default: None)
#scan_only_manual_hosts = true # only run the portscanner against manually configured hosts (Default: false)
#silent_mode = true # the agent will only upload configuration and status data (noNeighborhood or Portscanner data is uploaded to the server) (Default: false)
#target_specific_ports = 22,80,8080-8083 # when this setting is commented, all the open ports of each host will be scanned (Default: None)
